{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>
     <style>

        body{
         background-color:#69a238;  
           
    }
    </style>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Creation</th>
                <td>{{ commande.creation ? commande.creation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ commande.reference }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_commande_index') }}"><button>Retour</button></a> 

    <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}"><button>Modifier</button></a> 

