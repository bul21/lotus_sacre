{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>
     <style>

        body{
         background-color:#69a238;  
           
    }
    </style>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation</th>
                <th>Reference</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.creation ? commande.creation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.reference }}</td>
                <td>
                    <a href="{{ path('admin_commande_show', {'id': commande.id}) }}"><button>Détails</button></a> 
                    <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}"><button>modifier</button></a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_commande_new') }}"><button>Création de nouvelle commande</button></a> 
{% endblock %}
