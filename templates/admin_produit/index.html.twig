{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>
    <style>

        body{
         background-color:#69a238;  
           
    }
    </style>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>
                    <img src= {{asset('uploads/' ~ produit.imageFilename)}} width="100%"/>
                </td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.imageFilename }}</td>
                <td>
                    <a href="{{ path('admin_produit_show', {'id': produit.id}) }}"><button>Détails</button></a> 
                    <a href="{{ path('admin_produit_edit', {'id': produit.id}) }}"><button>Modifier</button></a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_produit_new') }}"><button>Création</button></a> 
{% endblock %}
