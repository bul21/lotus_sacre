{% extends 'base.html.twig' %}

{% block body %}

{% if cart.elements %}

<div>
    total du panier :{{ cart.total}}
</div>
<table>
    <tr>
        <th>Nom du produit</th>
        <th>Quantite</th>
        <th>Prix</th>
    </tr>

    {% for element in cart.elements %}

    <tr>
        <td>{{element.produit.nom}}</td>
        <td>{{element.quantity}}</td>
        <td>{{element.produit.prix}}</td>
    </tr>

    {% endfor %}
        

</table>

{% endif %}


{% endblock %}



