{% extends 'base.html.twig' %}

{% block body %}
<style>

        body{
         background-color:#69a238;  
           
    }
    </style>

{% if cart.elements %}

<div>
    total du panier :{{ cart.total}}
</div>
<table>
    <tr>
        <th>Nom du produit</th>
        <th>Quantite</th>
        <th>Prix</th>
    </tr>

    {% for element in cart.elements %}

    <tr>
        <td>{{element.produit.nom}}</td>
        <td>{{element.quantity}}</td>
        <td>{{element.produit.prix}}</td>
    </tr>

    {% endfor %}
        

</table>

 <a href="/payment"><button>payer</button></a> 
 <a href="/cart/clear"><button>annuler</button></a>

{% endif %}


{% endblock %}



