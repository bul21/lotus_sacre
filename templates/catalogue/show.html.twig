{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
                <td>
                    <img src="{{asset('uploads/' ~ produit.imageFilename )}}" class="w-50"/>
                </td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('cart_add', {'id': produit.id}) }}">buy</a>
     <a href="{{ path('cart_remove', {'id': produit.id}) }}">annuler</a>

    <a href="{{ path('catalogue_index') }}">back to list</a>

{% endblock %}
